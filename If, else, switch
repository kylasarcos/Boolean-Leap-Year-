		cout << "Invalid date!" << endl;
		break;
	case 7:
		if ( day <= 31)
		cout << "July " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
		break;
	case 8:
		if ( day <= 31)
		cout << "August " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
		break;
	case 9:
		if ( day <= 30)
		cout << "September " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
		break;
	case 10:
		if ( day <= 31)
		cout << "October " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
		break;
	case 11:
		if ( day <= 30)
		cout << "November " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
