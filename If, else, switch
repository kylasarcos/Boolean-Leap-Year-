		cout << "Invalid date!" << endl;
		break;
	case 5:
		if ( day <= 31)
		cout << "May " << day << "," << yr << endl;
		else 
		cout << "Invalid date!" << endl;
		break;
	case 6:
		if ( day <= 30)
		cout << "June " << day << "," << yr << endl;
